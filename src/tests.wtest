import disparo.*
import jugador.*
import enemigos.*
import juego.*
import nivelDeJuego.*
import wollok.game.*

describe "Jugador" {
	
	
	method initialize(){
	 juego.comenzar()
	}
	
	
	test "El jugador esta en la pantalla"{
		assert.that(game.hasVisual(jugador))
	}
	
	
	test "El jugador dispara"{
		jugador.disparar()
		assert.that(game.hasVisual(jugador.disparo()))
		
	}
		
	
}

describe "Disparo" {
	
	
	method initialize(){
	 juego.comenzar()
	 
	}
	
	
	test "El disparo del jugador se dirije hacia los enemigos"{
		jugador.disparar()
		(jugador.disparo()).mover(jugador.disparo())
		assert.that(((jugador.disparo()).posicion()).y() > 0)
	}
	
	
	test "El disparo del enemigo va hacia el jugador"{
	(nivelUno.unEnemigo()).disparar()
	((nivelUno.unEnemigo()).disparo()).mover((nivelUno.unEnemigo()).disparo())
	assert.that((((nivelUno.unEnemigo()).disparo()).posicion()).y() < 10)
		
	}
		
	
}



describe "Enemigo" {
	
	
	method initialize(){
	 juego.comenzar()
	 
	}
	
	
	test "El enemigo esta en la pantalla"{
     assert.that(game.hasVisual(nivelUno.unEnemigo()))
